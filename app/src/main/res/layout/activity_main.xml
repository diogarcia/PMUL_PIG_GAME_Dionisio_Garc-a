<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/aclonica"
        android:text="The PIG GAME"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/rightView"
        android:layout_width="195dp"
        android:layout_height="447dp"
        android:background="@color/cust_grey_nonselected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/leftView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582"></View>


    <View
        android:id="@+id/leftView"
        android:layout_width="200dp"
        android:layout_height="449dp"
        android:background="@color/cust_grey_nonselected"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rightView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.581"></View>

    <ImageView
        android:id="@+id/imgDice"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rightView"
        app:srcCompat="@drawable/dice_random" />

    <Button
        android:id="@+id/btn_throw"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="@color/cust_fucsia"
        android:fontFamily="@font/aclonica"
        android:text="Lanzar"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panel_curr_p2" />

    <Button
        android:id="@+id/btn_hold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Sostener"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_throw" />

    <Button
        android:id="@+id/btn_newGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Nuevo Juego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <LinearLayout
        android:id="@+id/panel_curr_p2"
        android:layout_width="102dp"
        android:layout_height="94dp"
        android:layout_marginTop="72dp"
        android:background="@color/cust_current_score"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/rightView"
        app:layout_constraintStart_toStartOf="@+id/rightView"
        app:layout_constraintTop_toBottomOf="@+id/tvAcumP2">

        <TextView
            android:id="@+id/tvCurrent2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CURRENT" />

        <TextView
            android:id="@+id/tv_curr_p2"
            android:layout_width="67dp"
            android:layout_height="69dp"
            android:background="@color/cust_current_score"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="34sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel_curr_p1"
        android:layout_width="102dp"
        android:layout_height="94dp"
        android:layout_marginTop="68dp"
        android:background="@color/cust_current_score"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/leftView"
        app:layout_constraintHorizontal_bias="0.559"
        app:layout_constraintStart_toStartOf="@+id/leftView"
        app:layout_constraintTop_toBottomOf="@+id/tvAcumP1">

        <TextView
            android:id="@+id/tvCurrent1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CURRENT" />

        <TextView
            android:id="@+id/tv_curr_p1"
            android:layout_width="67dp"
            android:layout_height="69dp"
            android:background="@color/cust_current_score"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="34sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Jugador 1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/leftView"
        app:layout_constraintStart_toStartOf="@+id/leftView"
        app:layout_constraintTop_toTopOf="@+id/leftView" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Jugador 2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/rightView"
        app:layout_constraintStart_toStartOf="@+id/rightView"
        app:layout_constraintTop_toTopOf="@+id/rightView" />

    <TextView
        android:id="@+id/tvAcumP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/leftView"
        app:layout_constraintStart_toStartOf="@+id/leftView"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/tvAcumP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/rightView"
        app:layout_constraintStart_toStartOf="@+id/rightView"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />


</androidx.constraintlayout.widget.ConstraintLayout>